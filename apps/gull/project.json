{
  "name": "gull",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "angular-monorepo",
  "sourceRoot": "apps/gull/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": [
        "{options.outputPath}",
        "{workspaceRoot}/dist/client",
        "{workspaceRoot}/dist/server"
      ],
      "options": {
        "cwd": "apps/gull",
        "command": "vite build && vite build --ssr"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "sourcemap": false,
          "mode": "production"
        }
      }
    },
    "build-dev": {
      "executor": "@nx/vite:build",
      "outputs": [
        "{options.outputPath}",
        "{workspaceRoot}/dist/client",
        "{workspaceRoot}/dist/server"
      ],
      "options": {
        "main": "apps/gull/src/main.ts",
        "configFile": "apps/gull/vite.config.ts",
        "logLevel": "info",
        "outputPath": "dist/apps/gull/client"
      },
      "defaultConfiguration": "production",
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "sourcemap": false,
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "gull:build-dev",
        "port": 5200
      },
      "configurations": {
        "development": {
          "buildTarget": "gull:build-dev:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "gull:build-dev:production"
        }
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "gull:build"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": [
        "{projectRoot}/coverage"
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/gull/**/*.{ts,html}"
        ]
      }
    }
  }
}
